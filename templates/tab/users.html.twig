{% extends 'template.html.twig' %}

{% block Title %}
    Users
{% endblock %}
{% block PageTitle %}
    Users
{% endblock %}
{% block body %}
<div>
    <table class="table">
        <tr class="table-active">
            <td>Fistname</td>
            <td>Name</td>
            <td>Age</td>
        </tr>
        {% for user in users %}
        <tr class="table-{% if loop.index is odd%}danger{% else %}warning{% endif   %}">
            <td>{{ user.firstname }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.age }}</td>
        </tr>
        {% endfor %}



    </table>
</div>
{% endblock %}